<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
<key>Label</key>
<string>com.username.myscript</string>
<key>ProgramArguments</key>
<array>
<string>~/.dotfiles/scripts/shell/sync-brain.sh</string>
</array>
<key>StartCalendarInterval</key>
<dict>
<key>Hour</key>
<integer>23</integer> <!-- 2 PM -->
<key>Minute</key>
<integer>0</integer> <!-- 0 minutes past the hour -->
</dict>
<key>StandardOutPath</key>
<string>/tmp/myscript.out</string>
<key>StandardErrorPath</key>
<string>/tmp/myscript.err</string>
</dict>
</plist>

